<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats'%>
    </section>
  </aside>
  <div class="col-md-12">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.insta_posts.any? %>
    <h3><%= @user.insta_posts.count %> Posted</h3>
    <ol class="insta_posts">
      <%= render @insta_posts %>
    </ol>
    <%= will_paginate @insta_posts %>
    <% end %>
  </div>
</div>

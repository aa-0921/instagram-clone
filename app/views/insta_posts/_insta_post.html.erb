<li id="insta_post-<%= insta_post.id %>" class="col-md-4">
  <%#= link_to gravatar_for(insta_post.user, size: 50), insta_post.user %>
  <%# <span class="user"><%= link_to insta_post.user.name, insta_post.user %>
  <%# </span> %>
  <span class="content">

    <%= link_to image_tag(insta_post.picture.url), insta_post_path(id: insta_post.id) %>

    <span class="user"><%= link_to insta_post.user.name, insta_post.user %></span>
    <%= insta_post.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(insta_post.created_at) %> ago.
    <% if current_user?(insta_post.user) %>
    <%= link_to "delete", insta_post, method: :delete,
                              data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
